<div>
  <div>
    <h1>
      Bingo board #<%= @the_bingo_board.id %> details
    </h1>

    <div>
      <div>
        <a href="/bingo_boards">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_bingo_board/<%= @the_bingo_board.id %>">
          Delete bingo board
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_bingo_board.user_id %>
      </dd>

      <dt>
        Park
      </dt>
      <dd>
        <%= @the_bingo_board.park_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_bingo_board.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_bingo_board.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit bingo board
    </h2>

    <form action="/modify_bingo_board/<%= @the_bingo_board.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_bingo_board.user_id %>">
      </div>

      <div>
        <label for="park_id_box">
          Park
        </label>

        <input type="text" id="park_id_box" name="query_park_id" value="<%= @the_bingo_board.park_id %>">
      </div>

      <button>
        Update bingo board
      </button>
    </form>
  </div>
</div>

<hr>
