<div>
  <div>
    <h1>
      Park #<%= @the_park.id %> details
    </h1>

    <div>
      <div>
        <a href="/parks">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_park/<%= @the_park.id %>">
          Delete park
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_park.name %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @the_park.location %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_park.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_park.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit park
    </h2>

    <form action="/modify_park/<%= @the_park.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_park.name %>">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location" value="<%= @the_park.location %>">
      </div>

      <button>
        Update park
      </button>
    </form>
  </div>
</div>

<hr>
